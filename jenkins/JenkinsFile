pipeline {
  agent {
    kubernetes {
      label 'jenkins-agent'  // all your pods will be named with this prefix, followed by a unique id
      idleMinutes 5  // how long the pod will live after no jobs have run on it
      defaultContainer 'ubuntu'  // define a default container if more than a few stages use it, will default to jnlp container
    }
  }
  stages {
    stage('Build Docker Image') {
      steps {
        container('ubuntu') {  
          sh "docker build -t wesleymessias/project_airflow:test ."  // when we run docker in this step, we're running it via a shell on the docker build-pod container, 
          sh "docker push wesleymessias/project_airflow:test"        // which is just connecting to the host docker deaemon
        }
      }
    }
  }
}
